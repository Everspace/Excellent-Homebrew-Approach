{
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "esnext",
    "lib": ["es2017"],
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["*.ts", "src"]
}
